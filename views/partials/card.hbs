<div class="col s12 m8 l4 center-cols">
  <div class="row">
    <div class="card blue darken-9">
      <div class="card-content white-text">
        <span class="card-title">
          <p>
            {{name}}
          </p>
        </span>
        <p>
          Category:
          {{category.name}}
        </p>
        <p>
          Description:
          {{description}}
        </p>
        <p>
          Price:
          {{price}}
        </p>
        <p>
          Number of items in stock:
          {{number_in_stock}}
        </p>
      </div>
      <div class="card-action">
        <a href="/edit/{{_id}}">
          <i class="fas fa-edit"></i>
        </a>
        <a href="/delete/{{_id}}">
          <i class="far fa-trash-alt"></i>
        </a>
      </div>
    </div>
  </div>
</div>
